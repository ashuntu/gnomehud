<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema id="org.gnome.shell.extensions.gnomehud" path="/org/gnome/shell/extensions/gnomehud/">
        <!-- See also: https://docs.gtk.org/glib/gvariant-format-strings.html -->
        <!-- SETTINGS -->
        <key name="show-indicator" type="b">
            <default>true</default>
        </key>
        <key name="show-overlay" type="b">
            <default>true</default>
        </key>
        <key name="show-osd" type="b">
            <default>true</default>
        </key>
        <key name="update-delay" type="i">
            <default>1000</default>
        </key>
        <key name="default-monitor" type="i">
            <default>0</default>
        </key>
        <key name="anchor-corner" type="i">
            <default>1</default>
        </key>
        <key name="margin-v" type="i">
            <default>100</default>
        </key>
        <key name="margin-h" type="i">
            <default>100</default>
        </key>
        <key name="overlay-h" type="i">
            <default>250</default>
        </key>
        <key name="overlay-w" type="i">
            <default>250</default>
        </key>
        <key name="background-color" type="s">
            <default>"rgb(0, 0, 0)"</default>
        </key>
        <key name="foreground-color" type="s">
            <default>"rgb(255, 255, 255)"</default>
        </key>
        <key name="background-opacity" type="d">
            <default>0.25</default>
        </key>
        <key name="foreground-opacity" type="d">
            <default>0.75</default>
        </key>
        <!-- See: https://specifications.freedesktop.org/icon-naming-spec/icon-naming-spec-latest.html -->
        <key name="default-icon" type="s">
            <default>"utilities-system-monitor"</default>
        </key>
        <!-- KEYBINDS -->
        <key name="kb-toggle-overlay" type="as">
            <default>["&lt;Super&gt;&lt;Alt&gt;g"]</default>
        </key>
    </schema>
</schemalist>